<div class="col-md-8">
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Job Name</th>
			<th>Current Location</th>
			<th>Destination</th>
			<th>Conatainers Needed</th>
			<th>Cost</th>
			<th>Cargo</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
<% @jobs.each do |job| %>
	<tr>
		<td><%= job.job_name %></td>
		<td><%= job.current_location %></td>
		<td><%= job.destination %></td>
		<td><%= job.containers_needed %></td>
		<td><%= '%.2f'%job.cost %></td>
		<td><%= job.cargo%></td>
		<td><%= link_to "Edit", edit_job_path(job.id) %> <%= link_to "Delete", job_path(job.id), method: :delete %></td>
<% end %>
	</tr>
	</tbody>
</table>
</div>


