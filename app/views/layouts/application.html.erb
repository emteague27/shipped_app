<!DOCTYPE html>
<html>
<head>
  <title>ShipApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="/assets/script.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
 <link href='https://fonts.googleapis.com/css?family=Righteous|Playfair+Display+SC:400,900|Amaranth:400,700|Marck+Script|Finger+Paint' rel='stylesheet' type='text/css'>
 <link rel="stylesheet" type="text/css" href="/assets/style.css">
</head>
<body>
<% if current_user %>
<div class="col-md-12">
	<h1 id="sitename" class="col-md-9">RumRunnerz</h1>
	<div class="dropdown col-md-3">
		 <button class="dropdown-toggle" type="button" data-toggle="dropdown"><img src="/flag.png" class="booze"><span class="caret"></span></button>
		     <ul class="dropdown-menu">
		        <li><%= link_to("Sign Out", logout_path) %></li>
		        <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
		      </ul>
	</div>
	<div class="col-md-12 navlinkbox">
		<div class="col-md-1">
			<%= link_to "Home", home_index_path, :class => "navlinks" %>
		</div>
		<div class="col-md-1">
			<%= link_to "All Users", users_path, :class => "navlinks" %>
		</div>
		<div class="col-md-1">
			<%= link_to "All Ships", ships_path(@ship), :class => "navlinks" %>
		</div>
	</div>
</div>
<% else %>
	<h1 id="sitename" class="col-md-12">RumRunnerz</h1>
<% end %>

<%= flash[:notice] if flash[:notice] %>
<%= flash[:alert] if flash[:alert] %> 
<%= yield %>


</body>
</html>
