<h1 id="welcome" class="col-md-12"> <%= @this_user.fname %>'s Profile</h1>
<div class="col-md-3 profile-pic"><%= image_tag @this_user.avatar.url(:medium) %></div>

<div class="col-md-8 profileshiptable">
<h2 class="profile-table-title"><%= @this_user.fname %>'s Ships</h2>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Ship Name</th>
			<th>Ship Type</th>
			<th>Length (ft)</th>
			<th>Location</th>
			<th>Container Capacity</th>
			<th>Actions</th>
			<th>Jobs</th>
		</tr>
	</thead>
	<tbody>
<% @ships.each do |ship| %>
	<tr>
		<td><%= ship.name %></td>
		<td><%= ship.ship_type %></td>
		<td><%= ship.length %></td>
		<td><%= ship.location %></td>
		<td><%= ship.container_no %></td>
		<td><%= link_to "Edit", edit_ship_path(ship.id) %> <%= link_to "Delete", ship_path(ship.id), method: :delete %> <%= link_to "Follow", relationship_path(ship.id), mehtod: :post %></td>
		<td><%= link_to "View Jobs", ship_path(ship.id) %></td>

<% end %>
	</tr>
	</tbody>
</table>
</div>